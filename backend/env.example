# LAMBA - Learning Activities & Machine-Based Assessment
# Environment configuration file
# Copy this to .env and fill in your values

# LTI Configuration (REQUIRED)
# These credentials must match your LTI tool configuration in Moodle
LTI_SECRET=my_lti_secret
OAUTH_CONSUMER_KEY=lamba_key

# Database Configuration (OPTIONAL)
# Default: sqlite:///./lamba.db
DATABASE_URL=sqlite:///./lamba.db

# HTTPS Configuration for production (OPTIONAL)
# Set to true when deploying with HTTPS
HTTPS_ENABLED=false

# CORS Origins (OPTIONAL)
# Comma-separated list of allowed origins for production
# Use * for development, specific domains for production
ALLOWED_ORIGINS=*

# LAMB Configuration (OPTIONAL)
# Bearer token for LAMB API authentication
LAMB_BEARER_TOKEN=XXXX
LAMB_API_URL=XXXX
LAMB_TIMEOUT=30

ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin